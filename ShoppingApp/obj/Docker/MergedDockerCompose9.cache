services:
  shopping.api:
    build:
      context: C:\Dev\MicroServices\ShoppingApp
      dockerfile: Shopping.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingapi
    ports:
    - published: 8000
      target: 80
  shopping.client:
    build:
      context: C:\Dev\MicroServices\ShoppingApp
      dockerfile: Shopping.Client/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingclient
    ports:
    - published: 8001
      target: 80
    volumes:
    - C:\Users\ombirade\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  shopping.db:
    container_name: shoppingdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
version: '3.4'